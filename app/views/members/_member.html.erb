<div id="<%= dom_id member %>">
  <p>
    <strong>Name:</strong>
    <%= member.name %>
  </p>

  <p>
    <strong>Website Url:</strong>
    <%= member.website_url %>
  </p>

  <p>
    <strong>Website Headlines(<%= member.headlines.count%>):</strong>
    <ul>
      <% member.headlines.each do |headline| %>
        <li><%= headline.content %> (<%= headline.level%>)
      <%end%>
    </ul>
  </p>

  <p>
    <strong>Friends(<%= member.friendships.count%>):</strong>
    <ul>
      <% member.friendships.each do |friendship| %>
        <li><%= link_to friendship.friend.name, friendship.friend %> (<%= link_to "Remove Friend", friendship_path(friendship), data: {turbo_method: :delete, turbo_confirm: "Are you sure?" } %>)</li>
      <%end%>
    </ul>
  </p>

  <p>
    <strong>Headline Friendship search</strong>
    <%= render partial: "members/search/form", locals: {member: member}%>
  </p>
</div>
